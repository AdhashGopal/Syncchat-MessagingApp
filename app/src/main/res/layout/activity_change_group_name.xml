<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/llTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorPrimary"
        >
        <ImageButton
            android:id="@+id/ibBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/arrow_left"
            android:background="@android:color/transparent"
            android:layout_gravity="center_vertical"
            android:padding="5dp"
        />
        <com.chatapp.synchat.app.widget.AvnNextLTProDemiTextView
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:gravity="center_vertical"
            android:text="@string/Enter_New_Subject"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/llTitle">

    <hani.momanii.supernova_emoji_library.Helper.EmojiconEditText
        android:id="@+id/etGroupName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:privateImeOptions="disableSticker=true;disableGifKeyboard=true"
        android:layout_marginTop="10dp"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:maxLength="25"
        android:layout_toLeftOf="@+id/tvCount"
        android:imeOptions="actionDone"
        />
    <com.chatapp.synchat.app.widget.AvnNextLTProRegTextView
        android:id="@+id/tvCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:layout_toLeftOf="@+id/ibSmiley"
        android:layout_toStartOf="@+id/ibSmiley"

        android:layout_alignBaseline="@id/etGroupName"
    />

    <ImageView
        android:id="@+id/ibSmiley"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        android:padding="5dp"
        android:src="@drawable/smile" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/llOkCancel"
        android:background="@color/dividerLine" />

    <LinearLayout
        android:id="@+id/llOkCancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:weightSum="100">

        <com.chatapp.synchat.app.widget.AvnNextLTProDemiButton
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:background="@color/white"
            android:text="@string/cancle"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/dividerLine" />

        <com.chatapp.synchat.app.widget.AvnNextLTProDemiButton
            android:id="@+id/btnOk"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:background="@color/white"
            android:text="@string/ok"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/emojicons"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_alignParentBottom="true"
        android:background="#EEEEEE"
        android:visibility="gone" />

</RelativeLayout>
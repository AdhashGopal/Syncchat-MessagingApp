<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <!--Header starts-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary">

        <ImageButton
            android:id="@+id/ibBack"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/arrow_left"
            android:padding="8dp"
            android:background="@android:color/transparent"
            />

        <com.chatapp.synchat.app.widget.AvnNextLTProDemiTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ibBack"
            android:layout_centerVertical="true"
            android:text="@string/delete_account_title"
            android:textColor="@android:color/white"
            android:textSize="18dp" />
    </RelativeLayout>
    <!--Header ends-->

    <com.chatapp.synchat.app.widget.AvnNextLTProRegTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/delete_ac_2_msg"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:padding="10dp"
        android:lineSpacingExtra="3dp"
    />
    <Spinner
        android:id="@+id/spinReason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
    />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
    />
    <com.chatapp.synchat.app.widget.AvnNextLTProRegEditText
        android:id="@+id/etImproveMsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/delete_ac_2_improve_hint"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:background="@android:color/transparent"
        android:padding="10dp"
        android:layout_marginTop="10dp"
    />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        />
    
    <com.chatapp.synchat.app.widget.AvnNextLTProDemiButton
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/delete_account_title"
        android:textAllCaps="true"
        android:background="@color/delete_ac_btn_bg"
        android:layout_margin="10dp"
    />

</LinearLayout>
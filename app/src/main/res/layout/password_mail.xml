<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/mainLayoutEmail"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/back_navigator"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:src="@mipmap/arrow_left"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            />

        <com.chatapp.synchat.app.widget.AvnNextLTProDemiTextView
            android:id="@+id/headingemail"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_gravity="right"
            android:layout_marginLeft="55dp"
            android:layout_toRightOf="@+id/back_navigator"
            android:gravity="center_vertical"
            android:text="@string/email_label"
            android:textColor="#ffffff"
            android:textSize="18dp"

            />
    </RelativeLayout>


    <com.chatapp.synchat.app.widget.AvnNextLTProRegTextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mainLayoutEmail"
        android:layout_marginLeft="25dp"
        android:padding="5dp"
        android:text="@string/enter_mailid_label"
        android:textColor="@color/colorPrimary"
        android:textSize="14sp"
        android:layout_marginTop="15dp"
        android:textStyle="bold" />



    <RelativeLayout
        android:id="@+id/emailID_RL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="7dp"
        android:padding="10dp">

        <com.chatapp.synchat.app.widget.AvnNextLTProRegEditText
            android:id="@+id/email_et"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/edittext_background"
            android:hint="@string/enter_mailid_label"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="11dp" />

        <View
            android:id="@+id/view_1"
            android:layout_width="match_parent"
            android:layout_height="0.75dp"
            android:layout_below="@+id/email_et"
            android:layout_centerInParent="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:background="#E4E4E4" />

    </RelativeLayout>


    <com.chatapp.synchat.app.widget.AvnNextLTProRegButton
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/emailID_RL"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/numberproviderbutton"
        android:text="@string/verify_emailID"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="18sp" />



</RelativeLayout>
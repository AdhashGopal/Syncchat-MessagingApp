<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    card_view:cardPreventCornerOverlap="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="2dp"
    card_view:contentPadding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.chatapp.synchat.app.widget.CircleImageView
            android:id="@+id/ivUserDp"
            android:layout_width="42dp"
            android:layout_height="42dp" />
        <com.chatapp.synchat.app.widget.AvnNextLTProRegTextView
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_toLeftOf="@+id/tvAdmin"
            android:layout_toRightOf="@id/ivUserDp"
            android:paddingLeft="10dp"
            android:layout_margin="1dp" />
        <com.chatapp.synchat.app.widget.AvnNextLTProRegTextView
            android:id="@+id/tvAdmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Group_Admin"
            android:textSize="10sp"
            android:textColor="@color/colorPrimary"
            android:padding="3dp"
            android:background="@drawable/admin_text_border"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:visibility="gone" />
        <com.chatapp.synchat.app.widget.AvnNextLTProRegTextView
            android:id="@+id/tvStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:layout_below="@id/tvName"
            android:layout_toRightOf="@id/ivUserDp"
            android:paddingTop="5dp"
            android:layout_marginTop="5dp"
            android:paddingLeft="10dp"
            android:layout_toLeftOf="@+id/tvAdmin"
            android:text="" />
        <View
            android:layout_toRightOf="@+id/ivUserDp"
            android:layout_below="@+id/ivUserDp"
            android:layout_marginTop="5dp"
            android:padding="3dp"
            android:paddingTop="4dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dividerLine" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
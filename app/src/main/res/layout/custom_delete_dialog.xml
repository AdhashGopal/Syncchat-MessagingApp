<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/custom_dialog_border"
    android:padding="8dp">


    <com.chatapp.android.app.widget.AvnNextLTProRegTextView
        android:id="@+id/tvMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:lineSpacingExtra="5dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="8dp"
        android:text=""
        android:textColor="@color/dialog_msg_text"
        android:textSize="14sp" />



    <com.chatapp.android.app.widget.AvnNextLTProDemiTextView
        android:id="@+id/tvforme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tvMessage"
        android:gravity="center"
        android:textAllCaps="true"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:text="@string/delete_forme"
        android:textColor="@color/colorPrimary"
        android:textSize="14sp" />

    <com.chatapp.android.app.widget.AvnNextLTProDemiTextView
        android:id="@+id/tvcancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tvforme"
        android:gravity="center"
        android:textAllCaps="true"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:text="@string/cancle"
        android:textColor="@color/colorPrimary"
        android:textSize="14sp" />

    <com.chatapp.android.app.widget.AvnNextLTProDemiTextView
        android:id="@+id/tveveryone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tvcancel"
        android:gravity="center"
        android:textAllCaps="true"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:visibility="gone"
        android:text="@string/delete_everyone"
        android:textColor="@color/colorPrimary"
        android:textSize="14sp" />

</RelativeLayout>
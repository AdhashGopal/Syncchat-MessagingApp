<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/R0_chat"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/chathistory_back"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:src="@mipmap/arrow_left" />

        <com.chatapp.synchat.app.widget.AvnNextLTProDemiTextView
            android:id="@+id/Text_chathistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/chathistory_back"
            android:gravity="right"
            android:layout_centerVertical="true"
            android:text="Chat History"
            android:textColor="#ffffff"
            android:textSize="18dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/chat_history_main"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/R0_chat"
        android:background="#ffffff">

        <RelativeLayout
            android:id="@+id/R1_chathistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff">

            <com.chatapp.synchat.app.widget.AvnNextLTProDemiTextView
                android:id="@+id/r1_txt1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:text="@string/Email_chat"
                android:textSize="15sp"
                android:textColor="#242424"
                android:textStyle="bold" />

            <View
                android:id="@+id/v1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/r1_txt1"
                android:layout_centerInParent="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="10dp"
                android:background="#E4E4E4" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/R2_chathistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/R1_chathistory"
            android:background="#ffffff">

            <com.chatapp.synchat.app.widget.AvnNextLTProDemiTextView
                android:id="@+id/r2_txt1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:textSize="15sp"
                android:textColor="#242424"
                android:text="@string/Archive_all_chats"
                android:textStyle="bold" />

            <View
                android:id="@+id/v2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/r2_txt1"
                android:layout_centerInParent="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"

                android:layout_marginTop="10dp"
                android:background="#E4E4E4" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/R3_chathistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/R4_chathistory"
            android:background="#ffffff">

            <com.chatapp.synchat.app.widget.AvnNextLTProDemiTextView
                android:id="@+id/r3_txt1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:textColor="#242424"
                android:text="@string/Clear_all_chats"
                android:textSize="15sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/v3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/r3_txt1"
                android:layout_centerInParent="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="10dp"
                android:background="#E4E4E4" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/R4_chathistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/R2_chathistory"
            android:background="#ffffff"
            android:visibility="gone">

            <com.chatapp.synchat.app.widget.AvnNextLTProRegTextView
                android:id="@+id/r4_txt1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:text="@string/Unarchive_all_chats"
                android:textStyle="bold" />

            <View
                android:id="@+id/v4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/r4_txt1"
                android:layout_centerInParent="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="10dp"
                android:background="#E4E4E4" />

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <RelativeLayout
        android:id="@+id/account_r1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/backarrow_account"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:src="@mipmap/arrow_left"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"

            />

        <com.chatapp.synchat.app.widget.AvnNextLTProDemiTextView
            android:id="@+id/text_actionbar_1"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_gravity="right"
            android:layout_marginLeft="55dp"
            android:layout_toRightOf="@+id/backarrow_account"
            android:gravity="center_vertical"
            android:text="@string/Account"
            android:textColor="#ffffff"
            android:textSize="18dp"

            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/account_r2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/account_r1"
        android:layout_marginTop="5dp"
        android:background="#ffffff">

        <com.chatapp.synchat.app.widget.AvnNextLTProDemiTextView
            android:id="@+id/account_txt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:text="@string/Privacy"
            android:textColor="#242424"
            android:textSize="15sp" />

        <View
            android:id="@+id/v1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/account_txt1"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:background="#E4E4E4" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/account_r3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/account_r2"
        android:layout_marginTop="5dp"
        android:background="#ffffff"
        android:visibility="gone">

        <com.chatapp.synchat.app.widget.AvnNextLTProDemiTextView
            android:id="@+id/account_txt2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="10dp"

            android:layout_marginTop="15dp"
            android:text="Security"
            android:textColor="#242424"
            android:textSize="15sp" />

        <View
            android:id="@+id/v2"
            android:layout_width="match_parent"
            android:layout_height="1dp"

            android:layout_below="@+id/account_txt2"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:background="#E4E4E4" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/account_r4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/account_r3"
        android:layout_marginTop="5dp"
        android:background="#ffffff"
        android:visibility="gone">

        <com.chatapp.synchat.app.widget.AvnNextLTProDemiTextView
            android:id="@+id/account_txt3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="10dp"

            android:layout_marginTop="15dp"
            android:text="Change Number"
            android:textColor="#242424"
            android:textSize="15sp" />

        <View
            android:id="@+id/v3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/account_txt3"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:background="#E4E4E4" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/account_r5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/account_r4"
        android:layout_marginTop="5dp"
        android:background="#ffffff"
        android:visibility="gone">

        <com.chatapp.synchat.app.widget.AvnNextLTProDemiTextView
            android:id="@+id/account_txt4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:text="@string/delete_account_title"
            android:textColor="#242424"
            android:textSize="15sp" />

        <View
            android:id="@+id/v4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/account_txt4"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:background="#E4E4E4" />
    </RelativeLayout>
</RelativeLayout>


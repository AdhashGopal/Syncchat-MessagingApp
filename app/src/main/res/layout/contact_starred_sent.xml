<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlContactSent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:orientation="vertical"
    android:padding="3dp">

    <RelativeLayout
        android:id="@+id/stardetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp">

        <com.chatapp.synchat.app.widget.CircleImageView
            android:id="@+id/userprofile"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@mipmap/chat_attachment_profile_default_image_frame" />

        <com.chatapp.synchat.app.widget.AvnNextLTProDemiTextView
            android:id="@+id/fromname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/userprofile"
            android:text="name"
            android:textColor="@color/lblFromName"
            android:textSize="14sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/indicator"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_toRightOf="@+id/fromname"
            android:src="@drawable/audio_play" />

        <com.chatapp.synchat.app.widget.AvnNextLTProDemiTextView
            android:id="@+id/toname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/indicator"
            android:text="you"
            android:textColor="@color/lblFromName"
            android:textSize="14sp"
            android:textStyle="bold" />

        <com.chatapp.synchat.app.widget.AvnNextLTProDemiTextView
            android:id="@+id/datelbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingRight="7dp"
            android:text="Today"
            android:textColor="@color/lblFromName"
            android:textSize="12sp" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_below="@+id/stardetail"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="-3.5dp"
        android:src="@drawable/starred_corner"
        android:visibility="visible" />


    <RelativeLayout
        android:id="@+id/relative_layout_message"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stardetail"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="70dp"
        android:background="@drawable/button">

        <TextView
            android:id="@+id/lblMsgFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="a"
            android:textColor="@color/lblFromName"
            android:textSize="12sp"
            android:textStyle="italic"
            android:visibility="gone"

            />


        <!--we have to put a view here to show contact details-->


        <com.chatapp.synchat.app.widget.AvnNextLTProRegTextView
            android:id="@+id/contactName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblMsgFrom"
            android:layout_toRightOf="@+id/contactImage"
            android:paddingTop="15dp"
            android:text=""
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:textStyle="bold"


            />

        <TextView
            android:id="@+id/contactNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/contactName"
            android:layout_toEndOf="@+id/contactImage"
            android:layout_toRightOf="@+id/contactImage"
            android:paddingStart="5dp"
            android:paddingLeft="5dp"
            android:paddingEnd="13dp"
            android:paddingRight="13dp"
            android:paddingBottom="5dp"
            android:text="kfgklmhdlh"
            android:textColor="#ffffff"
            android:textSize="10sp"
            android:textStyle="italic"
            android:visibility="gone" />


        <com.chatapp.synchat.app.widget.CircleImageView
            android:id="@+id/contactImage"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_below="@+id/lblMsgFrom"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:padding="3dp"
            android:src="@mipmap/contact_off" />

        <ImageView
            android:id="@+id/starredindicator_below"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_below="@+id/contactName"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="3dp"
            android:background="@drawable/starred_white"
            android:visibility="visible"


            />

        <com.chatapp.synchat.app.widget.AvnNextLTProRegTextView
            android:id="@+id/ts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/contactName"
            android:layout_marginLeft="135dp"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="5dp"
            android:text="sgfayig"
            android:textAllCaps="true"
            android:textColor="#ffffff"
            android:textSize="11sp" />

        <ImageView
            android:id="@+id/single_tick_green"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_below="@+id/contactName"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/ts"
            android:background="@mipmap/ic_single_tick"
            android:visibility="gone" />


        <ImageView
            android:id="@+id/double_tick_green"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_below="@+id/contactName"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/ts"
            android:background="@mipmap/ic_double_tick"
            android:visibility="gone" />


        <ImageView
            android:id="@+id/double_tick_blue"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_below="@+id/contactName"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/ts"
            android:background="@drawable/message_deliver_tick"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/clock"
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:layout_below="@+id/contactName"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="3dp"
            android:layout_toRightOf="@+id/ts"
            android:background="@drawable/clock"
            android:visibility="visible" />

        <View
            android:id="@+id/v1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/ts"
            android:layout_marginRight="10dp"
            android:background="#04a1d8" />

        <LinearLayout
            android:id="@+id/contact_add_invite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/v1"
            android:orientation="horizontal"
            android:visibility="visible"
            android:weightSum="100">

            <com.chatapp.synchat.app.widget.AvnNextLTProRegTextView
                android:id="@+id/invite_1"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="50"
                android:gravity="center"
                android:text="Invite"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:visibility="visible" />

            <View
                android:id="@+id/v2"
                android:layout_width="0.5dp"
                android:layout_height="30dp"
                android:layout_below="@+id/v1"
                android:background="#04a1d8"
                android:visibility="visible"/>

            <com.chatapp.synchat.app.widget.AvnNextLTProRegTextView
                android:id="@+id/add_1"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="50"
                android:gravity="center"
                android:text="Add Contact"
                android:textColor="#ffffff"
                android:textSize="12sp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/r1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/v1">

            <com.chatapp.synchat.app.widget.AvnNextLTProRegTextView
                android:id="@+id/invite"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="Invite"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:visibility="gone" />

            <com.chatapp.synchat.app.widget.AvnNextLTProRegTextView
                android:id="@+id/add"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="Add Contact"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/message"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="Message"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:visibility="gone" />


        </RelativeLayout>
    </RelativeLayout>

    <View
        android:id="@+id/v3"
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:layout_below="@+id/relative_layout_message"
        android:layout_marginTop="10dp"
        android:background="#E3E3E3" />
</RelativeLayout>